<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="NativeMind_Translation::config" title="NativeLang Translation"/>
                        </resource>
                    </resource>
                </resource>
                <resource id="Magento_Backend::system">
                    <resource id="NativeMind_Translation::translation" title="Translation Management">
                        <resource id="NativeMind_Translation::translate_products" title="Translate Products"/>
                        <resource id="NativeMind_Translation::translate_categories" title="Translate Categories"/>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
