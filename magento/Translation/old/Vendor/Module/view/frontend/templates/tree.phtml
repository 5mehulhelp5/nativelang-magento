<?php if ($block->isExpanded()): ?>
    <ul>
        <?php foreach ($block->getTree() as $category): ?>
            <li>
                <a href="<?php echo $block->escapeUrl($block->getCategoryUrl($category)) ?>"><?php echo $block->escapeHtml($category->getName()) ?></a>
                <?php if ($category->hasChildren()): ?>
                    <?php $block->setCategory($category) ?>
                    <?php echo $block->getTreeHtml($category, $block->getChildCategories($category)) ?>
                <?php endif; ?>
            </li>
        <?php endforeach; ?>
    </ul>
<?php endif; ?>
